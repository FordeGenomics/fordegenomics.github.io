<div class="iframe-holder-loading">
  <iframe class="figure-frame" src="/assets/files/interactive_krona_plot/krona.html" width="100%" height="500" frameborder="yes" onload="removeLoading()"></iframe>
</div>

<script>
  var removeLoading = function(){
    var el_loading = document.getElementsByClassName('iframe-holder-loading')[0]
    el_loading.style.background = 'none'

    var el_container = document.getElementsByClassName('figure-frame')[0]
    el_container.style.background = 'white'
  }
</script>

